<div class="container mt-3 d-flex align-items-center justify-content-center" >
  <div class="row">
    <div class="col-12">
      <h1>All our Houses</h1>
    </div>
  </div>
</div>
<%# Displaying all houses %>
<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-image" style="background-image: url('<%= flat.photo_url %>')"></div>
          <div class="card-content">
            <div class="card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.description %></p>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <div class="link-btn">
              <%= link_to "Details", flat_path(flat) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
